{
  "extends": "./tsconfig.json",
  "include": ["client/src/**/*", "shared/**/*", "types/**/*.d.ts"],
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true
  },
  "ts-node": {
    "compilerOptions": {
      "strict": false,
      "noImplicitAny": false
    }
  }
}
